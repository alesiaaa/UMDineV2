<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/activity_drawer_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin_text"
    android:paddingRight="@dimen/activity_horizontal_margin_text"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom">

    <ImageView
        android:id="@+id/UmassBostonIcon"
        android:src="@drawable/umass_boston_icon_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
         />

    <TextView
        android:id="@+id/UMDine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/Welcome"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="UMDine"
        android:textAppearance="?android:textAppearanceSmallInverse"
        />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Welcome!"
        android:textAppearance="?android:textAppearanceLarge"
         />

</RelativeLayout>