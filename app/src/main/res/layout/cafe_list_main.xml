    <ImageView
        android:id="@+id/image_view_menu_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/Death_to_stock_communicate_hands_small_blur"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"/>

    <TextView
        android:id="@+id/text_view_menu_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="@string/cafe_list_title"
        android:gravity="center"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/black"
        android:paddingTop="@dimen/cafe_list_margin_text" />

        <Button
            android:id="@+id/home_button1"
            android:layout_below="@id/image_view_menu_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cafe_list_button1"
            android:textColor="@color/white"
            android:background="@color/transparentColorPrimary"
            android:layout_margin="@dimen/button_margin"/>

        <Button
            android:id="@+id/home_button2"
            android:layout_below="@id/home_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cafe_list_button2"
            android:textColor="@color/white"
            android:background="@color/transparentColorPrimary"
            android:layout_margin="@dimen/button_margin"/>

        <Button
            android:id="@+id/home_button3"
            android:layout_below="@id/home_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cafe_list_button3"
            android:textColor="@color/white"
            android:background="@color/transparentColorPrimary"
            android:layout_margin="@dimen/button_margin"/>

        <Button
            android:id="@+id/home_button4"
            android:layout_below="@id/home_button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cafe_list_button4"
            android:textColor="@color/white"
            android:background="@color/transparentColorPrimary"
            android:layout_margin="@dimen/button_margin"/>

        <Button
            android:id="@+id/home_button5"
            android:layout_below="@id/home_button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cafe_list_button5"
            android:textColor="@color/white"
            android:background="@color/transparentColorPrimary"
            android:layout_margin="@dimen/button_margin"/>

        <Button
            android:id="@+id/home_button6"
            android:layout_below="@id/home_button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cafe_list_button6"
            android:textColor="@color/white"
            android:background="@color/transparentColorPrimary"
            android:layout_margin="@dimen/button_margin"/>

        <Button
            android:id="@+id/home_button7"
            android:layout_below="@id/home_button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cafe_list_button7"
            android:textColor="@color/white"
            android:background="@color/transparentColorPrimary"
            android:layout_margin="@dimen/button_margin"/>






</RelativeLayout>



