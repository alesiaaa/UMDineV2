<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/settings_content"
    tools:showIn="@layout/settings_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <!--Header-->

    <TextView
        android:id="@+id/settings_header"
        android:background="@color/transparentColorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="@string/settings_title"
        android:gravity="center"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/white"
        android:paddingTop="@dimen/activity_margin_text_double"
        android:paddingBottom="@dimen/activity_margin_text_double"/>


    <!--Content-->


    <ImageView
        android:id="@+id/settings_logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/umass_boston_icon_large"
        android:layout_marginTop="30dp"
        android:background="@color/transparentColorPrimary"
        android:layout_below="@+id/settings_header"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/settings_title1"
        android:layout_below="@id/settings_logo_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/settings_text"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="30dp" />


    <TextView
        android:id="@+id/settings_text1"
        android:layout_below="@id/settings_title1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="13sp"
        android:text="@string/settings_description"
        android:gravity="bottom"
        android:textColor="@color/grey"
        android:layout_marginLeft="@dimen/activity_margin_text"
        android:layout_marginRight="@dimen/activity_margin_text"
        android:layout_marginBottom="@dimen/activity_margin_text" />

    <TextView
        android:id="@+id/settings_text2"
        android:layout_below="@id/settings_text1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="12sp"
        android:text="@string/settings_copyright_text"
        android:gravity="center"
        android:textColor="@color/transparentColorPrimary"
         />


    <!-- <TextView
         android:id="@+id/faq_text2"
         android:layout_below="@id/faq_title2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="14sp"
         android:text="@string/faq_question_2_answer"
         android:gravity="start"
         android:textColor="@color/grey"
         android:layout_margin="@dimen/activity_margin_text" />-->

    
</RelativeLayout>

</ScrollView>

