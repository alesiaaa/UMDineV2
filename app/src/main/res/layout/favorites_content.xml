<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/favorites_content"
    tools:showIn="@layout/favorites_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <!--Header-->

    <TextView
        android:id="@+id/favorites_header"
        android:background="@color/transparentColorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="@string/favorites_title"
        android:gravity="center"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/white"
        android:paddingTop="@dimen/activity_margin_text_double"
        android:paddingBottom="@dimen/activity_margin_text_double"/>


    <!--Content-->


    <TextView
        android:id="@+id/favorites_title1"
        android:layout_below="@id/favorites_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/favorites_text1"
        android:gravity="center"
        android:textColor="@color/grey"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/activity_margin_text"/>


    <TextView
        android:id="@+id/favorites_text1"
        android:layout_below="@id/favorites_title1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:text="@string/food_court_item_6"
        android:gravity="bottom"
        android:textColor="@color/black"
        android:layout_margin="25dp"/>

    <TextView
        android:id="@+id/favorites_text_1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="12sp"
        android:text="@string/cafe_list_button1"
        android:gravity="bottom"
        android:textColor="@color/grey"
        android:layout_below="@+id/favorites_image1"
        android:layout_alignStart="@+id/favorites_text1" />

    <ImageView
        android:id="@+id/favorites_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_18pt"
        android:layout_marginEnd="43dp"
        android:layout_alignTop="@+id/favorites_text1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/favorites_text2"
        android:layout_below="@id/favorites_text1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:text="@string/food_court_item_13"
        android:gravity="bottom"
        android:textColor="@color/black"
        android:layout_margin="25dp"/>

    <TextView
        android:id="@+id/favorites_text_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="12sp"
        android:text="@string/cafe_list_button1"
        android:gravity="bottom"
        android:textColor="@color/grey"
        android:layout_below="@+id/favorites_image2"
        android:layout_alignStart="@+id/favorites_text2" />


    <ImageView
        android:id="@+id/favorites_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_18pt"
        android:layout_alignTop="@+id/favorites_text2"
        android:layout_alignStart="@+id/favorites_image1" />

    
</RelativeLayout>

</ScrollView>

